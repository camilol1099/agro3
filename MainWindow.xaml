<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgroConect" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#00A859"/>
        <SolidColorBrush x:Key="DarkGreen" Color="#008040"/>
        <SolidColorBrush x:Key="AccentGray" Color="#F5F5F5"/>
        <FontFamily x:Key="MainFont">Segoe UI</FontFamily>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkGreen}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="25"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentGray}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Color x:Key="GradientStopColor1">#FF3C9A15</Color>

    </Window.Resources>

    <Border CornerRadius="12" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="5" Color="#CCCCCC"/>
        </Border.Effect>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4.5*"/>
                <ColumnDefinition Width="3.0*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="18,0,0,12" MouseDown="Window_MouseDown" Margin="0,0,0,-13">
                <Border.Background>
                    <ImageBrush ImageSource="/IMAGENES/camilo3.jpg" 
                    Stretch="UniformToFill"/>
                </Border.Background>

                <StackPanel VerticalAlignment="Center" Margin="30">
                    <TextBlock Text="AgroSmart"
                   Foreground="White"
                   FontSize="53"
                   FontWeight="Black"
                   FontFamily="{StaticResource MainFont}"
                   Width="408" Height="93" Margin="20,100,0,0" HorizontalAlignment="Center"/>

                    <TextBlock Text="Impulsa la Gestión Inteligente de tu Producción Agrícola"
                   Foreground="White"
                   FontSize="20"
                   TextWrapping="Wrap"
                   MaxWidth="350"
                   TextAlignment="Center"
                   Margin="-66,0,0,-14" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="¡Hola!" FontSize="46" FontWeight="Bold" Margin="-3,-50,0,10" Foreground="#00A859"/>
                <TextBlock Text="Bienvenido a AgroSmart" FontSize="24" Margin="0,0,0,30" Foreground="#00A859"/>
                <TextBlock Text="Selecciona una opción para continuar" FontSize="17" Margin="-2,0,0,40" Foreground="Black"/>

                <Button Content="Ingresar a mi cuenta" 
            Width="250" 
            Margin="0,0,0,20"
                       
            Style="{StaticResource PrimaryButton}"
                         Click="IngresarButton_Click"/>

                <Grid Width="250" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Height="1" Background="Gray" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <TextBlock Grid.Column="1" 
                   Text="o" 
                   Foreground="Gray" 
                   FontSize="14" 
                   VerticalAlignment="Center" 
                   Margin="0,-2,0,0"/>

                    <Border Grid.Column="2" Height="1" Background="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </Grid>
                <Button Content="Crear cuenta (registrarme)" 
            Width="250" 
            Style="{StaticResource SecondaryButton}"
                        Click="CrearCuentaButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
